<Window x:Class="CalendarBackground.View.CalendarBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarBackground"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        StateChanged="Window_StateChanged_1"
        Title="MainWindow"
        Background="Transparent"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True">
    <Grid>
        <Rectangle Width="4.8" HorizontalAlignment="Left" Fill="Black" Margin="6"></Rectangle>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="6,9,6,100">
            <Rectangle Width="5" Height="50" Fill="GreenYellow"></Rectangle>
            <Rectangle Width="5" Height="50" Fill="DodgerBlue"></Rectangle>
            <Rectangle Width="5" Height="50" Fill="Cornsilk"></Rectangle>
        </StackPanel>
    </Grid>
</Window>
